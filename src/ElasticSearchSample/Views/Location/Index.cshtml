@model IEnumerable<LocationSearchResult>
@{
    ViewBag.Title = "Location";
}

<br />
<div>
    <form class="form-inline" method="post" asp-controller="Location" asp-action="Index">
        <div class="form-group">
            <label for="Keyword">Keyword</label>
            <input type="text" class="form-control" name="keyword" value="@ViewBag.SearchModel.Keyword" />
        </div>
        <div class="form-group">
            <label for="Longtitude">My Longtitude</label>
            <input type="text" class="form-control" name="longitude" value="@ViewBag.SearchModel.Longitude" />
        </div>
        <div class="form-group">
            <label for="Latitude">My Latitude</label>
            <input type="text" class="form-control" name="latitude" value="@ViewBag.SearchModel.Latitude" />
        </div>
        <div style="margin-top: 10px;">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>
</div>

<hr />

<table class="table table-bordered">
    <thead>
        <tr>
            <td>Name</td>
            <td>Longtitude</td>
            <td>Latitude</td>
            <td>Distance</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var location in Model)
        {
            <tr>
                <td>@location.Name</td>
                <td>@location.Longitude</td>
                <td>@location.Latitude</td>
                <td>@location.Distance</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="add">Add location</a>
</div>