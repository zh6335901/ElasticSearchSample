@model Location
@{
    ViewBag.Title = "Add location";
}
<br/>
<div>
    <form method="post" asp-controller="Location" asp-action="Add">
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" asp-for="Name" class="form-control"/>
        </div>
        <div class="form-group">
            <label for="GeoPoint_Lon">Longtitude</label>
            <input type="text" asp-for="GeoPoint.Lon" class="form-control" />
        </div>
        <div class="form-group">
            <label for="GeoPoint_Lat">Latitude</label>
            <input type="text" asp-for="GeoPoint.Lat" class="form-control" />
        </div>
        <input type="submit" value="Submit" class="btn btn-primary" />
    </form>
</div>
